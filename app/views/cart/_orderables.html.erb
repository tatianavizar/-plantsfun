<div class="container py-5" data-controller="subtotal">
    <h1 class="mb-5" style="justify-self:center">Your Shopping Cart</h1>
    <div class="row">
        <div class="col-lg-8">
          <% @cart.orderables.each do |orderable| %>
            <%= render partial: 'cart/orderable', locals: { orderable: orderable }, data: {target: "orberable"} %>
          <% end %>
            <!-- Continue Shopping Button -->
            <div class="text-start mb-4">
              <%= link_to "Continue Shopping", root_path, data: { turbo: false }, class: "btn btn-primary btn-prim" %>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Cart Summary -->
            <div class="card-cart cart-summary">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal</span>
                        <span data-subtotal-target="subtotal"> <%= @cart.subtotal %> €</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Shipping</span>
                        <span data-subtotal-target="shipping"><%= @cart.shipping %> €</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong data-subtotal-target="final"><%= @cart.total %>€</strong>
                    </div>
                    <%= link_to "Proceed to checkout", new_cart_order_path, class: "btn btn-primary btn-prim w-100", data: { turbo: false }  %>
                </div>
            </div>
        </div>
    </div>
</div>
