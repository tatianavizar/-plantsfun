<div class="container py-5">
  <h1 class="mb-4 text-center">Your Shipping Information</h1>
  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with model: @order, url: "/cart/orders/new", local: true do |f| %>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :name, class: "form-label" %>
                <%= f.text_field :name, required: true, class: "form-control" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :last_name, required: true, class: "form-control" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, required: true, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :address, class: "form-label" %>
              <%= f.text_field :address, required: true, class: "form-control" %>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :city, class: "form-label" %>
                <%= f.text_field :city, required: true, class: "form-control" %>
              </div>
              <div class="col-md-2 mb-3">
                <%= f.label :zipcode, class: "form-label" %>
                <%= f.text_field :zipcode, required: true, class: "form-control" %>
              </div>
            </div>
            <div class="d-grid">
              <%= f.submit "Place Order", class: "btn btn-primary btn-lg btn-prim" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-4 text-center">Order Summary</h5>
          <div class="d-flex flex-column gap-3">
            <% @cart.orderables.each do |orderable| %>
              <%= render partial: 'orders/order', locals: { orderable: orderable }, data: {target: "orderable"} %>
            <% end %>
          </div>
            <h6><strong>Shipping: </strong><%= @cart.shipping %>€</h6>
            <h6><strong>Total: </strong><%= @cart.total %>€</h6>
        </div>
      </div>
    </div>
  </div>
</div>
